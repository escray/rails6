<% if notice %>
  <aside id="notice">
    <%= notice %>
  </aside>
<% end %>
<h1>Your Pragmatic</h1>
<ul class="catalog">
  <% @products.each do |product| %>
    <li>
      <%= image_tag(product.image_url) %>
      <h2><%= product.title %></h2>
      <p>
        <%= sanitize(product.description) %>
      </p>
      <div class="price">
        <%= sprintf("$%0.02f", product.price) %>
      </div>
    </li>
  <% end %>
</ul>